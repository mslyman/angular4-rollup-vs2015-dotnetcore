// Configure bundling and minification for the project.
// More info at https://go.microsoft.com/fwlink/?LinkId=808241
[
  {
    "outputFileName": "wwwroot/jss/site.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/site.css"
    ]
  },
  {
    "outputFileName": "wwwroot/jss/lib/bootstrap.min.css",
    "inputFiles": [
      "wwwroot/lib/bootstrap/dist/css/bootstrap.min.css"
    ]
  },



  {
    "outputFileName": "wwwroot/jss/site.min.js",
    "inputFiles": [
      "wwwroot/js/site.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optinally generate .map file
    "sourceMap": false
  },

  {
    "outputFileName": "wwwroot/jss/lib/jquery.min.js",
    "inputFiles": [ "wwwroot/lib/jquery/dist/jquery.min.js" ],
    "minify": {
      "enabled": false,
      "renameLocals": false
    },
    "sourceMap": false
  },
  {
    "outputFileName": "wwwroot/jss/lib/bootstrap.min.js",
    "inputFiles": [ "wwwroot/lib/bootstrap/dist/js/bootstrap.min.js" ],
    "minify": {
      "enabled": false,
      "renameLocals": false
    },
    "sourceMap": false
  },
  {
    "outputFileName": "wwwroot/jss/lib/shimzone.js",
    "inputFiles": [
      "node_modules/core-js/client/shim.min.js",
      "node_modules/zone.js/dist/zone.min.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optinally generate .map file
    "sourceMap": false
  }
]
